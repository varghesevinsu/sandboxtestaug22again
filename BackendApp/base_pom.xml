<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.valeo.sslnextgen</groupId>
    <artifactId>SSLNextGEN</artifactId>
    <version>1.0.0-${env-suffix}</version>
  </parent>
  <artifactId>BackendAppParent</artifactId>
  <packaging>pom</packaging>
  <properties>
  	<appengine.cloud.tools.version>2.2.0</appengine.cloud.tools.version>
  </properties>
  <dependencies>
		<dependency>
			<groupId>com.valeo.sslnextgen</groupId>
			<artifactId>BackendBase</artifactId>
			<version>1.0.0-${env-suffix}</version>
		</dependency>
		<dependency>
    		<groupId>com.valeo.sslnextgen</groupId>
        	<artifactId>Frontend</artifactId>
        	<version>1.0.0-${env-suffix}</version>
        	<type>zip</type>
     	</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                	<execution>
                    	<id>unpack-directives</id>
                        <phase>prepare-package</phase>
                        <goals>
                        	<goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                        	<includeGroupIds>com.valeo.sslnextgen</includeGroupIds>
                            <includeArtifactIds>Frontend</includeArtifactIds>
                            <outputDirectory>${basedir}/WebContent</outputDirectory>
                            <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                 </executions>
             </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<archiveClasses>true</archiveClasses>
					<warSourceDirectory>${basedir}/WebContent</warSourceDirectory>
					<resources>
						<resource>
							<directory>${project.basedir}/src/main/resources</directory>
						</resource>
					</resources>
					<webResources>
						<resource>
							<directory>${basedir}/WebContent/WEB-INF</directory>
							<filtering>true</filtering>
							<targetPath>WEB-INF</targetPath>
						</resource>
					</webResources>
				</configuration>
			</plugin>
				<plugin>
                	<groupId>com.google.cloud.tools</groupId>
                    <artifactId>appengine-maven-plugin</artifactId>
                    <version>${appengine.cloud.tools.version}</version>
                    <configuration>
                    	<deploy.promote>false</deploy.promote>
                        <projectId>${app-name}</projectId>
                        <version>${app-version}</version>
                        <enableJarClasses>false</enableJarClasses>
                    </configuration>
                </plugin>	
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<filters>
			<filter>${basedir}/src/main/resources/pom_properties/baseconfig.properties</filter>
			<filter>${basedir}/src/main/resources/pom_properties/customconfig.properties</filter>
		</filters>
	</build>
	<profiles>
		<profile>
			<id>local</id>
			<properties>
				<app-name>vb-eva-gen</app-name>
				<app-version>1-0-0</app-version>
				<local-env>true</local-env>
				<env-suffix>DEV</env-suffix>
			</properties>
			<activation> 
            	<activeByDefault>true</activeByDefault>
        	</activation>
		</profile>
     </profiles>
</project>